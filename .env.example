# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=traffic_violations

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017

# API Keys & Secrets
SECRET_KEY=your_secret_key_here
API_KEY=your_api_key_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_app_password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 (for evidence storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=traffic-violations-bucket
AWS_REGION=us-east-1

# RTO/Police Portal Integration
RTO_API_KEY=your_rto_api_key
POLICE_PORTAL_URL=http://police-portal-url

# Firebase (optional)
FIREBASE_CONFIG_PATH=./firebase-config.json

# Logging
LOG_LEVEL=INFO

# Development
DEBUG=True
ENVIRONMENT=development
